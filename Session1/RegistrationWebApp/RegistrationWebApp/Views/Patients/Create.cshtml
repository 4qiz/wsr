@model RegistrationWebApp.Models.Patient

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SurName" class="control-label">Фамилия</label>
                <input asp-for="SurName" class="form-control" />
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label">Отчество</label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passport" class="control-label">Серия и номер пасспорта</label>
                <input asp-for="Passport" class="form-control" />
                <span asp-validation-for="Passport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassportIssuedBy" class="control-label">Кем Выдан</label>
                <input asp-for="PassportIssuedBy" class="form-control" />
                <span asp-validation-for="PassportIssuedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsurancyPolicy" class="control-label">Полис</label>
                <input asp-for="InsurancyPolicy" class="form-control" />
                <span asp-validation-for="InsurancyPolicy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsurancyPolicyCompany" class="control-label">Стразовая компания</label>
                <input asp-for="InsurancyPolicyCompany" class="form-control" />
                <span asp-validation-for="InsurancyPolicyCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsurancyPolicyEndDate" class="control-label">Дата окончания полиса</label>
                <input asp-for="InsurancyPolicyEndDate" class="form-control" type="date"/>
                <span asp-validation-for="InsurancyPolicyEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">Дата рождения</label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-label">Пол</label>
                <div>
                    <input type="radio" asp-for="IsMale" value="true" />
                    <label asp-for="IsMale">Мужской</label>
                    <input type="radio" asp-for="IsMale" value="false" />
                    <label asp-for="IsMale">girl</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Адрес</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Номер Телефона</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label">Фото</label>
                <input asp-for="Photo" class="form-control" type="file" name="image"/>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkPlace" class="control-label">Место Работы</label>
                <input asp-for="WorkPlace" class="form-control" />
                <span asp-validation-for="WorkPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зарегистрировать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
