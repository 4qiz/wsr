@model IEnumerable<RegistrationWebApp.Models.Hospitalization>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" >
    <label class="col-form-label">Поиск по коду гомпитализации</label>
    <input name="id" class="form-control"/>
    <input type="submit" class="btn btn-outline-primary" value="search"/>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HospitalizationCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalizationGoal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCanceled)
            </th>
            <th>
                номер мед карты
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HospitalizationCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HospitalizationGoal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCanceled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalCard.MedicalCardId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HospitalizationId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.HospitalizationId">Просмотреть</a> |
                <a asp-action="Delete" asp-route-id="@item.HospitalizationId">Отменить</a>
            </td>
        </tr>
}
    </tbody>
</table>
