<form method="post" 
    asp-action="RegisterPatient" 
    enctype="multipart/form-data"
    class="w-50">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Имя</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SurName" class="form-label">Фамилия</label>
        <input asp-for="SurName" class="form-control">
        <span asp-validation-for="SurName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Patronymic" class="form-label">Отчество</label>
        <input asp-for="Patronymic" class="form-control">
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Passport" class="form-label">Паспорт</label>
        <input asp-for="Passport" class="form-control">
        <span asp-validation-for="Passport" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label">Дата рождения</label>
        <input asp-for="DateOfBirth" class="form-control" type="date">
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="IsMale" class="form-label">Пол</label>
        <div>
            <input asp-for="IsMale" class="form-switch" type="radio" value="true">
            <label asp-for="IsMale" class="form-text">Мужской</label>
        </div>
        
        <div>
            <input asp-for="IsMale" class="form-switch" type="radio" value="false">
            <label asp-for="IsMale" class="form-text">Женский</label>
        </div>
        @* <span asp-validation-for="IsMale" class="text-danger"></span> *@
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label">Адрес</label>
        <input asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">Телефон</label>
        <input asp-for="PhoneNumber" class="form-control">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Job" class="form-label">Место работы</label>
        <input asp-for="Job" class="form-control">
        <span asp-validation-for="Job" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="InsurancePolicy.Number" class="form-label">Полис</label>
        <input asp-for="InsurancePolicy.Number" class="form-control">
        <span asp-validation-for="InsurancePolicy.Number" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="InsurancePolicy.Company" class="form-label">Страховая компания</label>
        <input asp-for="InsurancePolicy.Company" class="form-control">
        <span asp-validation-for="InsurancePolicy.Company" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="InsurancePolicy.EndDate" class="form-label">Дата окончания полиса</label>
        <input asp-for="InsurancePolicy.EndDate" class="form-control" type="date">
        <span asp-validation-for="InsurancePolicy.EndDate" class="text-danger"></span>
    </div>

