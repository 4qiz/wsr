@{
}
<div class="align-self-center">
    <h1>Поиск пациета по QR коду</h1>
    <form method="post" asp-action="Index" asp-controller="FindPatient" enctype="multipart/form-data">
        <label class="form-label m-4">Загрузите qr код</label>
        <input class="form-control" type="file" id="file" name="file" />
        <br/>
        <button type="submit" class="btn btn-outline-primary m-4">Найти</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.URL))
    {
        <div class="col-lg-12">
            <img src="@ViewBag.URL" />
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Text))
    {
        <div class="col-lg-12">
            SCAN QR: @ViewBag.Text
        </div>
    }
</div>